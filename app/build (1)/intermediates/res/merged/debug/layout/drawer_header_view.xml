<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/articles_header_height"
    android:layout_height="@dimen/articles_header_height"
    android:layout_gravity="center_horizontal"
    android:drawingCacheQuality="high"
    android:fadingEdge="vertical"
    android:fadingEdgeLength="5dp"
	android:padding="15dp" >

    <com.flaviofaria.kenburnsview.KenBurnsView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
		android:layout_gravity="center"
        android:src="@drawable/hill_sky_day" />
    
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
		android:layout_gravity="center"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/app_logo_inverse" />
    
    <com.romainpiel.shimmer.ShimmerTextView
        android:id="@+id/drawer_header_view_shimmer_textview"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal|bottom"        
		android:text="@string/app_motto"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:textColor="@color/darker_grey"
		android:lines="1"
		android:ellipsize="end"
		android:paddingBottom="20dp" />

</FrameLayout>