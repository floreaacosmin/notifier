<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_item_detail_view_header"
    android:layout_width="match_parent"
    android:layout_height="@dimen/articles_header_height"
    android:background="@drawable/background_shadow"
    android:drawingCacheQuality="high"
    android:fadingEdge="vertical"
    android:fadingEdgeLength="5dp"
    android:paddingBottom="3dp" >

    <include layout="@layout/items_header_hill_sky" />

    <TextView
        android:id="@+id/app_item_detail_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:gravity="center"
        android:padding="4dp"
        android:text="@string/loading"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:maxLines="4"
        android:ellipsize="marquee"
        android:typeface="sans" />

    <include layout="@layout/items_header_hill_silhouette" />

</FrameLayout>