<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- App Theme -->
    <style name="app_theme" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowBackground">@color/background_grey</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTitleSize">0dp</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
       	<item name="android:actionBarStyle">@style/app_transparent_actionBar_style</item>
        <item name="android:textColorHint">@android:color/holo_blue_light</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHighlight">@color/app_theme_color</item>
        <item name="android:textColorLink">@color/app_theme_color</item>
        <item name="android:textIsSelectable">@null</item>
    	<item name="android:foreground">@null</item>
    	<item name="android:colorBackgroundCacheHint">@android:color/transparent</item>
    	<item name="android:animateLayoutChanges">true</item>
    </style>

    <!-- AppDevelop ActionBar Transparent Style -->
    <style name="app_transparent_actionBar_style" parent="@android:style/Widget.ActionBar">
        <item name="android:background">@null</item>
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="android:titleTextStyle">@style/app_transparent_actionBar_title_style</item>
  		<item name="android:customNavigationLayout">@layout/app_items_actionbar_view</item>
    </style>
    
    <!-- AppDevelop ActionBar Transparent Title Style -->    
    <style name="app_transparent_actionBar_title_style" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

	<!-- About TextView Style -->
	<style name="about_text_view" >
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_gravity">center</item>
	    <item name="android:gravity">center</item>
	    <item name="android:layout_margin">4dp</item>
	    <item name="android:padding">4dp</item>
	    <item name="android:textColor">@color/white</item>
	    <item name="android:textSize">22sp</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:typeface">sans</item>
	</style>
			
</resources>